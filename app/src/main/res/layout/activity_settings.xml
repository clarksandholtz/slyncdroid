<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/colorPrimary"
        android:padding="20dp">

        <ImageView
            android:id="@+id/account_profile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:adjustViewBounds="false"
            android:visibility="visible"
            app:srcCompat="@mipmap/ic_launcher_round"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="30dp">

            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Clark Sandholtz"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/account_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="clark@get-slyncy.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/account_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="(801) 678-5386"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/abc_list_selector_holo_dark"
                android:baselineAligned="false"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:orientation="horizontal"
                android:paddingEnd="?android:attr/scrollbarSize"
                android:paddingLeft="12dip"
                android:paddingRight="?android:attr/scrollbarSize"
                android:paddingStart="12dip">

                <ImageView
                    android:id="@+id/sync_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_sync_black_24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sync_entry_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dip"
                        android:layout_marginStart="8dip"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:text="Resync Messages"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="30sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/abc_list_selector_holo_dark"
                android:baselineAligned="false"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:orientation="horizontal"
                android:paddingEnd="?android:attr/scrollbarSize"
                android:paddingLeft="12dip"
                android:paddingRight="?android:attr/scrollbarSize"
                android:paddingStart="12dip">

                <ImageView
                    android:id="@+id/group_message_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_group_black_24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/group_message_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dip"
                        android:layout_marginStart="8dip"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:text="Group Messages"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="30sp"/>

                </LinearLayout>

                <Switch
                    android:id="@+id/group_messages_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/abc_list_selector_holo_dark"
                android:baselineAligned="false"
                android:clickable="true"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:orientation="horizontal"
                android:paddingEnd="?android:attr/scrollbarSize"
                android:paddingLeft="12dip"
                android:paddingRight="?android:attr/scrollbarSize"
                android:paddingStart="12dip"
                android:onClick="launchNotifFilter">

                <ImageView
                    android:id="@+id/notification_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_notifications_black_24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/notification_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dip"
                        android:layout_marginStart="8dip"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:text="Notification Mirroring"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="30sp"/>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/notification_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/abc_btn_borderless_material"
                    android:foregroundGravity="right|center_vertical"
                    android:padding="8dip"
                    android:onClick="launchNotifFilter"
                    app:srcCompat="@drawable/ic_navigate_next_black_24dp"/>

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:background="@drawable/abc_list_selector_holo_dark"
                          android:baselineAligned="false"
                          android:clickable="true"
                          android:gravity="center_vertical"
                          android:minHeight="?android:attr/listPreferredItemHeight"
                          android:orientation="horizontal"
                          android:paddingEnd="?android:attr/scrollbarSize"
                          android:paddingLeft="12dip"
                          android:paddingRight="?android:attr/scrollbarSize"
                          android:paddingStart="12dip">

                <ImageView
                    android:id="@+id/logout_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_logout_black_24dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/logout_entry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dip"
                        android:layout_marginStart="8dip"
                        android:ellipsize="marquee"
                        android:fadingEdge="horizontal"
                        android:singleLine="true"
                        android:text="Logout"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="30sp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>