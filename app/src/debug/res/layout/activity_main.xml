<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:resolver="com.get_slyncy.slyncy.View.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>

    <Button
        android:id="@+id/apns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="launchSettings"
        android:text="Settings"/>

    <Button
        android:id="@+id/oauth_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O Auth"
        android:onClick="launchLogin"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS Radar"
        android:onClick="launchSmsRadar"/>

    <EditText
        android:id="@+id/ip_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="IP Address"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/apply_ip_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:onClick="applyIpChange"/>


</LinearLayout>
